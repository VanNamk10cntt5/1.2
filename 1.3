class Diem {
    private:
        float x;
        float y;
    public:
        void nhap();
        void xuat();
};

Định nghĩa hàm nhap:

void Diem::nhap() {
    cout << "Nhap hoanh do: ";
    cin >> x;
    cout << "Nhap tung do: ";
    cin >> y;
}

Hàm xuat:

void Diem::xuat() {
    cout << "(" << x << "," << y << ")";
}


int main() {
    Diem A;
    A.nhap();
    A.xuat();
    return 0;
}
